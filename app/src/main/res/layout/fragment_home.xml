<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/AdddressLayout"
                android:layout_width="match_parent"
                android:padding="@dimen/normal_margin"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/addressMarkerIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="@dimen/small_margin"
                    ></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/addressLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address Label"
                        android:drawableRight="@drawable/baseline_keyboard_arrow_down_24"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/montserrat_semibold"
                        />

                    <TextView
                        android:layout_width="@dimen/small_text_limiter"
                        android:layout_height="wrap_content"
                        android:text="Address Detail Label extension"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/x_small_text"
                        android:fontFamily="@font/montserrat_medium"
                        />
                </LinearLayout>



            </LinearLayout>




            <TextView
                android:id="@+id/userGreet"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Alex!"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="@dimen/medium_text"
                android:drawablePadding="@dimen/small_margin"
                android:layout_gravity="center"
                android:layout_margin="@dimen/large_margin"
                />


                <com.google.android.material.search.SearchBar
                    android:id="@+id/searchBar"
                    android:layout_width="match_parent"
                    style="@style/Widget.Material3.SearchBar.Outlined"
                    android:layout_height="wrap_content"
                    android:text="Search Restaurants"
                    android:textAppearance="@font/montserrat"
                    app:titleTextAppearance="@font/montserrat"
                    android:layout_margin="0dp"/>


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Vegtarian"
                        android:drawableLeft="@drawable/veg"
                        style="@style/Widget.Material3.CompoundButton.RadioButton"
                        bub 

                </RadioGroup>



            <LinearLayout
                android:layout_margin="@dimen/normal_margin"
                android:id="@+id/unavailableCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:src="@drawable/unavailable"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/medium_text"
                    android:layout_margin="@dimen/normal_margin"
                    android:textColor="@color/material_dynamic_neutral60"
                    android:text="Restaurants Currently Unavailable"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</FrameLayout>