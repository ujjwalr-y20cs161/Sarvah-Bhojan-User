<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Account">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accountFragLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Account Center"
                android:textSize="@dimen/medium_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:background="@drawable/rounded_large"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/medium_image"
                        android:layout_height="@dimen/medium_image"
                        android:layout_margin="@dimen/small_margin"
                        android:src="@drawable/user_icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/UserName"
                            android:layout_width="@dimen/small_text_limiter"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginRight="@dimen/small_margin"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_medium"
                            android:maxLines="1"
                            android:text="Alex Maxwell "
                            android:textSize="@dimen/small_text" />

                        <TextView
                            android:id="@+id/UserId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/hash"
                            android:drawablePadding="@dimen/small_margin"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/montserrat"
                            android:maxLines="1"
                            android:text="a10001"
                            android:textSize="@dimen/xs" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/editInfo"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/baseline_chevron_right_24"
                        android:text="Edit Info"
                        android:textColor="?attr/colorControlNormal"
                        android:textSize="@dimen/xs" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_margin"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/baseline_local_phone_24"
                        android:drawablePadding="@dimen/small_margin"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat"
                        android:maxLines="1"
                        android:text="+91 9876543210"
                        android:textSize="@dimen/xs" />

                    <TextView
                        android:id="@+id/emailDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_margin"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/outline_alternate_email_24"
                        android:drawablePadding="@dimen/small_margin"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat"
                        android:maxLines="1"
                        android:text="example@sarvahbhojan.com"
                        android:textSize="@dimen/xs" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/small_margin"
                android:background="@color/quantum_grey" />

            <TextView
                android:id="@+id/paymentMethodCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Payment Method"
                android:textSize="@dimen/small_text"
                android:padding="@dimen/large_margin"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:drawablePadding="@dimen/small_margin"
                android:drawableLeft="@drawable/baseline_currency_rupee_24"
                android:drawableRight="@drawable/baseline_chevron_right_24"/>

            <TextView
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:id="@+id/addressCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Addresses"
                android:textSize="@dimen/small_text"
                android:padding="@dimen/large_margin"
                android:drawablePadding="@dimen/small_margin"
                android:drawableLeft="@drawable/baseline_location_on_24"

                android:drawableRight="@drawable/baseline_chevron_right_24"/>

            <TextView
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:id="@+id/customerSupportCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Customer Support"
                android:textSize="@dimen/small_text"

                android:padding="@dimen/large_margin"
                android:drawablePadding="@dimen/small_margin"
                android:drawableLeft="@drawable/icons8_customer_service_24"
                android:drawableRight="@drawable/baseline_chevron_right_24"/>

            <TextView
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:id="@+id/deleteAccountCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Delete Account"
                android:textColor="@color/quantum_googred"
                android:textSize="@dimen/small_text"
                android:padding="@dimen/large_margin"
                android:drawablePadding="@dimen/small_margin"
                android:drawableLeft="@drawable/baseline_delete_outline_24" />

            <TextView
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:id="@+id/LogoutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_logout_24"
                android:drawablePadding="@dimen/small_margin"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:padding="@dimen/large_margin"
                android:text="Log out of Account"
                android:textSize="@dimen/small_text" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/small_margin"
                    android:background="@color/quantum_grey"/>

            <TextView
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:id="@+id/projectInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:fontFamily="@font/jet"
                android:text=" @github : ujjwalr-y20cs161"
                android:textAlignment="center"
                android:textSize="@dimen/small_text" />
            <TextView
                android:id="@+id/devSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/large_margin"
                android:fontFamily="@font/major_mono_display"
                android:text="with ðŸ’– ujjwal"
                android:textAlignment="center"
                android:textSize="@dimen/normal_text" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>