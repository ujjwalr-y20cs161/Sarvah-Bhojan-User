<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_large"
    android:layout_margin="@dimen/small_margin"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/medium_image"
            android:layout_height="@dimen/medium_image"
            android:src="@drawable/food_bowl"/>

        <LinearLayout
            android:layout_margin="@dimen/normal_margin"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:id="@+id/addressLabel"
                android:layout_width="@dimen/small_text_limiter"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:fontFamily="@font/montserrat_semibold"
                android:background="@color/quantum_grey"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/addressDetails"
                android:layout_width="@dimen/small_text_limiter"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x_small_text"
                android:fontFamily="@font/montserrat"
                android:background="@color/quantum_grey"
                android:layout_marginTop="@dimen/small_margin"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/triangle_small_svgrepo_com"
            android:layout_margin="@dimen/small_margin"/>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <Button
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:textColor="@color/quantum_googgreen"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:padding="0dp"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/medium_text"/>

        <ImageButton
            android:layout_width="@dimen/medium_image"
            android:layout_height="@dimen/medium_image"
            android:backgroundTint="@color/quantum_grey"/>

        <Button
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:textColor="@color/quantum_error_dark"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:padding="0dp"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/medium_text"/>

    </LinearLayout>
    </LinearLayout>

